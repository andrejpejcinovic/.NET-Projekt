@model ProgramskoInzenjerstvo.Models.Rasadnik

@{
    ViewBag.Title = "Obrisi";
}

<h2>Obrisi</h2>

<h3>Jeste li sigurni?</h3>
<div class="label-info" style="background-color:aliceblue;border-radius:15px; width:50%;padding-left:20px;padding-top:20px;padding-bottom:15px">
    <h4>Rasadnik</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Vrsta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vrsta)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Lokacija)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lokacija)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Bilje.Rod)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Bilje.Rod)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obrisi" class="btn btn-default" /> |
            @Html.ActionLink("Natrag na listu", "Index")
        </div>
    }
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onsubmit = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
</div>

@model ProgramskoInzenjerstvo.Models.Bilje

@{
    ViewBag.Title = "Obrisi";
}

<h1 class="text-uppercase text-primary text-left" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">Obrisi</h1>

<div class="label-info" style="background-color:aliceblue;border-radius:15px; width:50%;padding-left:20px;padding-top:20px;padding-bottom:15px">
    <h3>Bilje</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Cijena:
        </dt>
        <br />
        <dd>
            @Html.DisplayFor(model => model.Cijena)
        </dd>
        <br />
        <dt>
            Rod:
        </dt>
        <br />
        <dd>
            @Html.DisplayFor(model => model.Rod)
        </dd>
        <br />
        <dt>
            Vrsta:
        </dt>
        <br />
        <dd>
            @Html.DisplayFor(model => model.Vrsta)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obrisi" class="btn btn-default" onclick="return confirm('Jeste li sigurni da zelite obrisati?')" /> |
            @Html.ActionLink("Natrag na listu", "Index")

        </div>
    }
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onsubmit = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
</div>

<div>
    @Html.ActionLink("Natrag na listu", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

@if (ViewBag.Message != null) 
{
        <script type="text/javascript">
                window.onsubmit = function () {
                    alert("@ViewBag.Message");
                };
        </script>
    }
}
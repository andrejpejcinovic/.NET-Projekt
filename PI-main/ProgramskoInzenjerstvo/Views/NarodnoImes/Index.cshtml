@model IEnumerable<ProgramskoInzenjerstvo.Models.NarodnoIme>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="example">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NarodnoIme1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bilje.Rod)
            </th>
            <th>
                Upravljanje
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.NarodnoIme1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bilje.Rod)
                </td>
                <td>
                    <button type="button" class="btn btn-sm btn-warning" title="Uredi">
                        @Html.ActionLink("Edit", "Edit", new { id = item.IDNarodnoIme })
                    </button>
                    <button type="button" class="btn btn-sm btn-info" title="Detalji">
                        @Html.ActionLink("Details", "Details", new { id = item.IDNarodnoIme })
                    </button>
                    <button type="submit" class="btn btn-sm btn-danger delete" title="Obrisi">
                        @Html.ActionLink("Delete", "Delete", new { id = item.IDNarodnoIme })
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.10.25/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.10.25/datatables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                language: {
                    search: "Pretraga",
                    info: "_START_ - _END_ (ukupno _TOTAL_)",
                    lengthMenu: "Prikaži _MENU_ zapisa",
                    paginate: {
                        first: "Prva",
                        previous: "Prethodna",
                        next: "Sljedeća",
                        last: "Zadnja"
                    },
                    emptyTable: "Nema podataka za prikaz",
                    info: "_START_ - _END_ od ukupno _TOTAL_ zapisa",
                    infoEmpty: "Nema podataka za prikaz",
                    infoFiltered: "(filtrirano od ukupno _MAX_ zapisa)",
                    zeroRecords: "Ne postoje traženi podaci"
                }
            });
        });
    </script>
}

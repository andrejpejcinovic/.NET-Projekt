@model IEnumerable<ProgramskoInzenjerstvo.Models.BiljnaPutovnica>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Biljna putovnica</h2>

<p>
    <button type="submit" class="btn btn-sm btn-default next" title="Dodaj">
        @Html.ActionLink("Create New", "Create")
        </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Drzava)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Podrijetlo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bilje.Rod)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Drzava)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Podrijetlo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bilje.Rod)
        </td>
        <td>
            @Html.ActionLink("Uredi", "Edit", new { id = item.IDBiljnaPutovnica }, new { @class = "btn btn-sm btn-warning" })

            @Html.ActionLink("Detalji", "Details", new { id = item.IDBiljnaPutovnica }, new { @class = "btn btn-sm btn-info" })


            
        </td>
    </tr>
}

</table>
